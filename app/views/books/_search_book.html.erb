<div class="col-sm-6 col-md-4 col-lg-3 fix-padding8 mb-4">
  <div class="card book-card">
    <%= link_to  book_path(search_book) do %>
      <%= image_tag search_book.image, class: "card-img-top" %>
    <% end %>
    <div class="card-body fix-padding8">
      <div class="home-book-title text-left">
        <%= search_book.name%>
      </div>
      <div class="home-book-author text-left">
       <span>by </span>
        <% search_book.authors.each do |author| %>
          <span><%= author.name %></span>
        <% end %>
      </div>
      <div><a href="#" class="borrow-link"><%= t ".borrow" %></a></div>
    </div>
  </div>
</div>
