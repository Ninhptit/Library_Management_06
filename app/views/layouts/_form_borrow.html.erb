<div id="contact-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= t ".time" %></h4>
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"><%= t ".close" %></span></button>
      </div>
        <%= form_for @borrow do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= t ".start_date" %><%= f.date_field :start_date, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= t ".end_date" %><%= f.date_field :end_date, class: "form-control", required: true %>
          </div> 
        </div>
        <%= f.fields_for :book_borrows do |f| %>
          <%= f.hidden_field :book_id, value: params[:id] %>
        <% end %>  
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t ".close" %></button>
          <%= f.submit class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
