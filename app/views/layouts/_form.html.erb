<div id="contact-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= t ".edit_time_borrow" %></h4>
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"><%= t ".close" %></span></button>
      </div>
      <%= form_for @borrow, remote: true do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <%= t ".start_date" %><%= f.date_field :start_date, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= t ".end_date" %><%= f.date_field :end_date, class: "form-control" %>
        </div>
        <h2><%= t ".list_books_borrow" %></h2>
        <div class="form_group">
          <table class="table table-condensed">
            <tbody>
              <% @borrow.book_borrows.each do |book_borrow|  %>
                <tr id="book_borrow_<%= book_borrow.id %>">
                  <td><%= book_borrow.book.name %></td>
                  <td><span class="float-right"><%= link_to t(".destroy"),  book_borrow_path(book_borrow.id), class: "btn btn-danger btn-sm",  method: :delete, remote: true %></span></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>      
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t ".close" %></button>
        <%= f.submit class: "btn btn-primary" %>
        <% if current_user.borrows.check_approve(true).present? %>
          <%= link_to t(".history_borrow"), borrows_path, class: "btn btn-primary", method: :get%>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
