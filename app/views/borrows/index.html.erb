<div class="space-40"></div>
<div class="container">
  <h2><%= t ".history_borrow" %></h2>
  <%= paginate @borrows %>
  <table class="table">
    <thead>
      <tr>
        <th><%= t ".stt" %></th>
        <th><%= t ".start_date" %></th>
        <th><%= t ".end_date" %></th>
        <th><%= t ".action" %></th>
      </tr>
    </thead>
    <tbody>
      <% @borrows.each_with_index do |borrow, index|%>
        <tr>
          <td><%= index + Settings.borrow.index %></td>
          <td><%= borrow.start_date.strftime t(".format_date") %></td>
          <td><%= borrow.end_date.strftime t(".format_date") %></td>
          <td><%= link_to t(".show"), borrow_path(id: borrow.id), class: "btn btn-default", method: :get %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @borrows %>
</div>
<div class="space-0"></div>
